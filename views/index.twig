{% extends "layout.twig" %}
{% block content %}
	{% for post in posts %}
		<div class="flex flex-col max-w-xs bg-white px-8 py-6 rounded-xl space-y-5 items-center">
			<h3 class="font-serif font-bold text-gray-900 text-xl">{{post.title|escape}}</h3>
			<img class="w-full rounded-md" src="https://dummyimage.com/300x200/000/fff" alt="{{post.title}}"/>
			<p class="text-center leading-relaxed">{{post.description}}</p>
			<a href="/{{post.url_key}}" class="px-10 py-4 bg-gray-900 rounded-md text-white text-sm">Read more</a>
		</div>
	{% endfor %}
{% endblock %}
